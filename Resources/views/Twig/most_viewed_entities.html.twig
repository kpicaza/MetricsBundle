{# empty Twig template #}
{% for entity in entities %}
    <div class="row">
        <div class="span12 col-md-12 col-lg-12">
            <div class="panel">
                <div class="panel-body">
                    <h5><a href="{{ path('show_post', { 'slug': entity.slug } ) }}">{{ entity.title }}</a></h5>

                    {% if entity.images |length > 0 %}
                        {% thumbnail entity.images[0].media, 'small' %}
                    {% endif %}

                </div>

                <!--<div class="panel-footer">
                    <a href="{{ path('show_post', { 'slug': entity.slug } ) }}" class="center-block button btn btn-primary">{{ 'Read more'|trans }}</a>
                </div>-->
            </div>
        </div>
    </div>
{% endfor %}